@model PersonMVC.Models.DemoPersonViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "不要亂進入人家的房間嘛";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Login", "TestLogin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(name => Model.PersonName)
        @Html.TextBox("Name")
    </div>
    <button type="submit" class="btn btn-default">Login</button>
}